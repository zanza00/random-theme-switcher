{
    "name": "random-theme-switcher",
    "displayName": "Random Theme Switcher",
    "description": "A simple extension that randomly choose a theme",
    "version": "0.1.0",
    "publisher": "zanza00",
    "icon": "icon/rts.png",
    "author": {
        "name": "Simone Picciani",
        "email": "zanza00@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zanza00/random-theme-switcher"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "random",
        "theme switcher",
        "theme changer",
        "startup"
    ],
    "activationEvents": [
        "onCommand:randomThemeSwitcher.switchTheme",
        "onCommand:randomThemeSwitcher.copyInstalledThemes",
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "randomThemeSwitcher.switchTheme",
                "title": "Random Theme: Switch to a Random Theme"
            },
            {
                "command": "randomThemeSwitcher.copyInstalledThemes",
                "title": "Random Theme: Copy all installed themes in settings"
            }
        ],
        "configuration": {
            "title": "Random Theme Switcher configuration list",
            "properties": {
                "randomThemeSwitcher.themeList": {
                    "default": [],
                    "description": "List of themes from which one random theme is selected, to popuulate use the command 'copy installed themes'",
                    "type": "array"
                },
                "randomThemeSwitcher.switchOnOpen": {
                    "type": "boolean",
                    "description": "When active it will change theme when code is opened",
                    "default": "true"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "@types/lodash": "^4.14.109"
    },
    "dependencies": {
        "lodash": "^4.17.10"
    }
}
